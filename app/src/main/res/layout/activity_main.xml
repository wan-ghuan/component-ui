<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.wangxb.component.ui.view.SignatureView
        android:id="@+id/signature_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:paintColor="@color/black"
        app:paintWidth="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_48" />

    <Button
        android:id="@+id/signature_clear"
        android:text="@string/signature_view_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_16" />

    <Button
        android:id="@+id/signature_confirm"
        android:text="@string/signature_view_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16" />

</androidx.constraintlayout.widget.ConstraintLayout>